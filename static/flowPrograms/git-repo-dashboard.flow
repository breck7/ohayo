html.h1 Statistics for Local Git Repo
web.get http://localhost:2222/shell?command=gitlog&cwd=/somerepo/
 date.expand
  group.by day
   charts.heatcal
    title Commits by day
    count count
   charts.kpi Median Commits Per Coding Day
    column count
    reduction median
   charts.kpi # Coding Days
    column count
    reduction count
  group.by month
   goog.line
    title Monthly Commit Trends
    x month
    y count
   goog.bar
    x month
    y count
    title Days worked by month
 charts.kpi Total Commits
  column author
  reduction count
 charts.kpi Most Recent Commit
  column time
  reduction max
 charts.kpi First Commit
  column time
  reduction min
@settings
 layout column